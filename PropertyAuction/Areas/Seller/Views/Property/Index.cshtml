@model List<Property>

<h1 class="text-center text-primary">Property List</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Properties</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Property" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Property
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Location</th>
                <th>Size (sq ft)</th>
                <th>Rooms</th>
                <th>Bathrooms</th>
                <th>Year Built</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model)
            {
                <tr>
                    <td>@property.Title</td>
                    <td>@property.Description</td>
                    <td>@property.Location</td>
                    <td>@property.Size</td>
                    <td>@property.NumberOfRooms</td>
                    <td>@property.NumberOfBathrooms</td>
                    <td>@property.YearBuilt</td>
                    <td>@property.PropertyCategory?.Name</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Property" asp-action="Edit" asp-route-id="@property.PropertyId" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Property" asp-action="Delete" asp-route-id="@property.PropertyId" class="btn btn-danger mx-1">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                            <a asp-controller="Auction" asp-action="Create" asp-route-id="@property.PropertyId" class="btn btn-danger mx-1">
                                <i class="bi bi-trash-fill"></i> List in Auctions
                            </a>
                            
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
