@model AuctionCreateVM

<div class="container">
    <h2>Create Auction for @Model.SelectedProperty.Title</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <input asp-for="PropertyId" type="hidden" />

                <div class="form-group">
                    <label asp-for="StartDate">Auction Start Date</label>
                    <input asp-for="StartDate" class="form-control" type="datetime-local" required />
                </div>

                <div class="form-group">
                    <label asp-for="EndDate">Auction End Date</label>
                    <input asp-for="EndDate" class="form-control" type="datetime-local" required />
                </div>

                <div class="form-group">
                    <label asp-for="StartingBid">Starting Bid</label>
                    <input asp-for="StartingBid" class="form-control" type="number" step="0.01" required />
                </div>

                <div class="form-group">
                    <label asp-for="ReservationPrice">Reservation Price</label>
                    <input asp-for="ReservationPrice" class="form-control" type="number" step="0.01" required />
                </div>

                <div class="form-group">
                    <label asp-for="MinimumBidIncrement">Minimum Bid Increment</label>
                    <input asp-for="MinimumBidIncrement" class="form-control" type="number" step="0.01" required />
                </div>

                <button type="submit" class="btn btn-primary">Create Auction</button>
            </form>
        </div>
        <div class="col-md-6">
            <h3>Property Details</h3>
            <dl class="row">
                <dt class="col-sm-4">Title</dt>
                <dd class="col-sm-8">@Model.SelectedProperty.Title</dd>

                <dt class="col-sm-4">Location</dt>
                <dd class="col-sm-8">@Model.SelectedProperty.Location</dd>

                <dt class="col-sm-4">Size</dt>
                <dd class="col-sm-8">@Model.SelectedProperty.Size sq ft</dd>

                <dt class="col-sm-4">Rooms</dt>
                <dd class="col-sm-8">@Model.SelectedProperty.NumberOfRooms</dd>

                <dt class="col-sm-4">Bathrooms</dt>
                <dd class="col-sm-8">@Model.SelectedProperty.NumberOfBathrooms</dd>

                <dt class="col-sm-4">Year Built</dt>
                <dd class="col-sm-8">@Model.SelectedProperty.YearBuilt</dd>
            </dl>
        </div>
    </div>
</div>