@model IEnumerable<AuctionListing>

<div class="container">
    <div class="row pb-3">
        @foreach (var auction in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@auction.Property.ImageUrl" class="card-img-top rounded" alt="@auction.Property.Title" />
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@auction.Property.Title</p>
                                    <p class="card-title text-warning text-center">@auction.Property.Location</p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center mb-0">
                                        Starting Bid:
                                        <span>@auction.StartingBid.ToString("C")</span>
                                    </p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">
                                        Current Highest Bid:
                                        <span>@(auction.CurrentHighestBid ?? auction.StartingBid).ToString("C")</span>
                                    </p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">
                                        Auction Ends:
                                        <span>@auction.EndDate.ToString("g")</span>
                                    </p>
                                </div>
                            </div>
                            <div>
                                <a asp-area="Buyer" asp-controller="BuyerAuction" asp-action="Details" asp-route-id="@auction.AuctionId"
                                   class="btn btn-primary bg-gradient border-0 form-control">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>