@model List<BuyerAuctionListVM>

<div class="container">
    <h2>Current Auctions</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Property</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Starting Bid</th>
                <th>Current Highest Bid</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auction in Model)
            {
                <tr>
                    <td>@auction.PropertyTitle</td>
                    <td>@auction.StartDate.ToString("g")</td>
                    <td>@auction.EndDate.ToString("g")</td>
                    <td>@auction.StartingBid.ToString("C")</td>
                    <td>@auction.CurrentHighestBid.ToString("C")</td>
                    <td>@auction.Status</td>
                    <td>
                        <a asp-area="Buyer" asp-action="Details" asp-route-id="@auction.AuctionId" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>