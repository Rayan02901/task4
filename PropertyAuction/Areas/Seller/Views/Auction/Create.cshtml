@model AuctionCreateVM

<div class="container">
    <h2>Create New Auction</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="PropertyId">Select Property</label>
            <select asp-for="PropertyId" asp-items="@(new SelectList(Model.AvailableProperties, "PropertyId", "Title"))" class="form-control" required>
                <option value="">Choose a Property</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="StartDate">Auction Start Date</label>
            <input asp-for="StartDate" class="form-control" type="datetime-local" required />
        </div>

        <div class="form-group">
            <label asp-for="EndDate">Auction End Date</label>
            <input asp-for="EndDate" class="form-control" type="datetime-local" required />
        </div>

        <div class="form-group">
            <label asp-for="StartingBid">Starting Bid</label>
            <input asp-for="StartingBid" class="form-control" type="number" step="0.01" required />
        </div>

        <div class="form-group">
            <label asp-for="ReservationPrice">Reservation Price</label>
            <input asp-for="ReservationPrice" class="form-control" type="number" step="0.01" required />
        </div>

        <div class="form-group">
            <label asp-for="MinimumBidIncrement">Minimum Bid Increment</label>
            <input asp-for="MinimumBidIncrement" class="form-control" type="number" step="0.01" required />
        </div>

        <button type="submit" class="btn btn-primary">Create Auction</button>
    </form>
</div>